
@{
    ViewData["Title"] = "Acheter Produit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Acheter Produit</h2>
<div class="filtrer">
    <form id="formAchat" onsubmit="return false;">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="Url">Url : </label><a href="" id="Url" target="_blank"></a>
                    <input id="idPost" type="hidden" />
                    @*<div class="control-label ">
                            <input id="Url" name="Url" type="text" class="form-control input-sm" disabled />
                        </div>*@
                </div>
                <div class="form-group">
                    <label for="Description">Description :</label>
                    <div class="control-label ">
                        <input id="Description" name="Description" type="text" class="form-control input-sm" disabled />
                    </div>
                </div>
                <div class="form-group">
                    <label for="Prix">Prix :</label>
                    <div class="control-label ">
                        <input id="Prix" name="Prix" type="text" class="form-control input-sm" disabled />
                    </div>
                </div>
                <div class="form-group">
                    <label for="DateNotified">Date envoyé :</label>
                    <div class="control-label ">
                        <input id="DateNotified" name="DateNotified" type="text" class="form-control input-sm" disabled />
                    </div>
                </div>
                <div class="form-group">
                    <label for="DateLimite">Date limite :</label>
                    <div class="control-label ">
                        <input id="DateLimite" name="DateLimite" type="text" class="form-control input-sm" disabled />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="screen-comment">Upload Screen Commentaire :</label>
                    <div class="control-label ">
                        <input id="screen-comment" name="screen-comment" type="file" accept="image/*" class="form-control input-sm" />
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <div class="form-group">
                    <img src="#" alt="" id="idImgScreen" style="height:400px;" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="idComment">Commentaire :</label>
                    <div class="control-label ">
                        <textarea id="idComment" class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-success form-control" id="idBtnComment">Envoyer</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script src="~/js/Internal/user.js"></script>
    <script>
        commerce.amazon.web.user.InitBuyProduct();
    </script>
}